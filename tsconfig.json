{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "declaration": true,               // Generate .d.ts files
    "sourceMap": true,                 // Generate source maps for debugging
    "noImplicitAny": true              // Disallow implicit 'any' type
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
